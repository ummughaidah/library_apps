<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bkg"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/imageUrl"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/buku1" />

        <!-- TableLayout to hold TextViews -->
        <TableLayout
            android:id="@+id/table_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageUrl"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp">

            <!-- Row 1: Judul -->
            <TableRow>
                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul" />

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/title_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atomic Habits"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false" />
            </TableRow>

            <!-- Row 2: Penulis -->
            <TableRow>
                <TextView
                    android:id="@+id/TextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penulis" />

                <TextView
                    android:id="@+id/TextView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="James Clear"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"/>
            </TableRow>

            <!-- Row 3: Penerbit -->
            <TableRow>
                <TextView
                    android:id="@+id/TextView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penerbit" />

                <TextView
                    android:id="@+id/TextView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gramedia"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"/>
            </TableRow>

            <!-- Row 4: Tahun Terbit -->
            <TableRow>
                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahun Terbit" />

                <TextView
                    android:id="@+id/TextView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/publishedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/add_cart"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/table_book"
            android:text="Add Cart" />
    </RelativeLayout>

</LinearLayout>
