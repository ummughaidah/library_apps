<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bkg"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/imageUrlCart"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/buku1" />

        <TableLayout
            android:id="@+id/table_book_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageUrlCart"
            android:layout_marginTop="12dp">

            <!-- Row 1: Judul -->
            <TableRow>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/title_book_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atomic Habits"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"/>
            </TableRow>

            <!-- Row 2: Penulis -->
            <TableRow>
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penulis"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/author_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="James Clear"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"/>
            </TableRow>

            <!-- Row 3: Penerbit -->
            <TableRow>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penerbit"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/publisher_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gramedia"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"/>
            </TableRow>

            <!-- Row 4: Tahun Terbit -->
            <TableRow>
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahun Terbit"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/publishedDate_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"/>
            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/delete_button_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/table_book_cart"
            android:src="@drawable/ic_delete"/>

    </RelativeLayout>

</LinearLayout>
